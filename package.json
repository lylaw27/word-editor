{
  "name": "word-editor",
  "version": "1.0.0",
  "description": "A desktop word processor built with Electron, React, and TipTap",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.9",
    "@ai-sdk/openai-compatible": "^2.0.18",
    "@ai-sdk/react": "^3.0.50",
    "@floating-ui/react": "^0.27.17",
    "@parallel-web/ai-sdk-tools": "^0.2.1",
    "@tiptap/extension-blockquote": "^3.18.0",
    "@tiptap/extension-bold": "^3.18.0",
    "@tiptap/extension-bullet-list": "^3.18.0",
    "@tiptap/extension-code": "^3.18.0",
    "@tiptap/extension-code-block": "^3.18.0",
    "@tiptap/extension-color": "^3.18.0",
    "@tiptap/extension-document": "^3.18.0",
    "@tiptap/extension-font-family": "^3.18.0",
    "@tiptap/extension-heading": "^3.18.0",
    "@tiptap/extension-highlight": "^3.18.0",
    "@tiptap/extension-history": "^3.18.0",
    "@tiptap/extension-horizontal-rule": "^3.18.0",
    "@tiptap/extension-italic": "^3.18.0",
    "@tiptap/extension-list-item": "^3.18.0",
    "@tiptap/extension-ordered-list": "^3.18.0",
    "@tiptap/extension-paragraph": "^3.18.0",
    "@tiptap/extension-placeholder": "^3.18.0",
    "@tiptap/extension-strike": "^3.18.0",
    "@tiptap/extension-text": "^3.18.0",
    "@tiptap/extension-text-align": "^3.18.0",
    "@tiptap/extension-text-style": "^3.18.0",
    "@tiptap/extension-underline": "^3.18.0",
    "@tiptap/pm": "^3.18.0",
    "@tiptap/react": "^3.18.0",
    "@tiptap/starter-kit": "^3.18.0",
    "@types/pdf-parse": "^1.1.5",
    "ai": "^6.0.48",
    "canvas": "^3.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cohere-ai": "^7.20.0",
    "convex": "^1.31.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "html-to-docx": "^1.8.0",
    "lucide-react": "^0.294.0",
    "mammoth": "^1.6.0",
    "openai": "^6.18.0",
    "path-browserify": "^1.0.1",
    "pdf-parse": "^1.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "@types/path-browserify": "^1.0.3",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.wordeditor.app",
    "productName": "Word Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
